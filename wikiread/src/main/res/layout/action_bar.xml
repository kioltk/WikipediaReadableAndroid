<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">
    <View
        android:background="#d0f3f3f3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageButton

        android:onClick="onDrawerClick"
        android:src="@drawable/ic_drawer"
        android:background="@drawable/navigation_button"
        android:id="@+id/settings"
        android:padding="15dp"
        android:scaleType="centerInside"
        android:layout_width="90dp"
        android:layout_alignParentLeft="true"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/search"
        android:imeActionLabel="Search"
        android:hint="Search"
        android:textColor="#666"
        android:textColorHint="#aaa"
        android:background="#fff"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/settings"
        android:layout_toLeftOf="@+id/language"
        android:src="@drawable/globe"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:inputType="text" />

    <ImageButton
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:onClick="onGlobeClick"
        android:background="@drawable/navigation_button"
        android:id="@+id/language"
        android:src="@drawable/globe"
        android:scaleType="centerInside"
        android:padding="30dp"
        android:layout_width="90dp"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent" />

</RelativeLayout>
